<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>

    <style>
        .chat{
            padding: 20px;
            margin: 10px;
            border-radius: 20px;
            background-color: #00c0b6;
            height: 200px;
            width: 500px;
        }
        .msg{
            padding: 20px;
            margin: 10px;
            border-radius: 20px;
            height: 100px;
            width: 400px;
            background-color: green;
        }
    </style>
</head>
<body>
    <h3>All Chats</h3>

   <% for(let chat of chats){%>
        <div class="chat">
            <p>From: <%=chat.from%></p>
            <div class="msg">
                <p>Massage: <%=chat.msg%></p>
            </div>
            <p>Reciever: <%=chat.to%></p>
        </div>
    <%}%>

</body>
</html>



